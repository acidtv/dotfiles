[ui]
verbose = True
merge = internal:merge

[bookmarks]
track.current = True

[extensions]
pager =
graphlog =
mercurial_keyring =
color = 
shelve =

[pager]
pager = LESS='FRX' less

[revsetalias]
# all commits in bookmark, useful for `hg log`
bmcommits(bm) = ancestor(bm:@)::bm and not ancestor(bm:@)

# parent of bookmark, useful for `hg diff`
bmparent(bm) = ancestor(bm:@)
